@model CanYouEvenWin.Models.ViewModels.AttemptFormViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Attempt</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Attempt.Id" class="control-label"></label>
                <input asp-for="Attempt.Id" class="form-control" />
                <span asp-validation-for="Attempt.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Attempt.UserProfileId" class="control-label"></label>
                <input asp-for="Attempt.UserProfileId" class="form-control" />
                <span asp-validation-for="Attempt.UserProfileId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Attempt.PrizeId" class="control-label">Prize</label>
                <select asp-for="Attempt.PrizeId" class="form-control">
                    <option value="">Select Prize</option>
                    @foreach (Prize prize in Model.Prizes)
                    {
                        <option value="@prize.Id">@prize.Name</option>
                    }
                </select>
                <span asp-validation-for="Attempt.PrizeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Attempt.ContestId" class="control-label"></label>
                <input asp-for="Attempt.ContestId" class="form-control" />
                <span asp-validation-for="Attempt.ContestId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"asp-route-id="@Model.Attempt.ContestId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
