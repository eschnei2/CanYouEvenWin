@model CanYouEvenWin.Models.ViewModels.AttemptFormViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Attempt</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Attempt.PrizeId" class="control-label">Prize</label>
                <select asp-for="Attempt.PrizeId" class="form-control">
                    <option value="">Select Prize</option>
                    @foreach (Prize prize in Model.Prizes)
                    {
                        <option value="@prize.Id">@prize.Name</option>
                    }
                </select>
                <span asp-validation-for="Attempt.PrizeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
