@model CanYouEvenWin.Models.ViewModels.PrizeIndexViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-primary" asp-action="Create" asp-route-id="@Model.ContestId">Add Prize</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Prize.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prize.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prize.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prize.ContestId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PrizeList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContestId)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary mx-1" title="Edit">
                        <i class="fas fa-pencil-alt"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-primary mx-1" title="Delete">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
    <a class="nav-link text-dark" asp-area="" asp-controller="Contest" asp-action="Details" asp-route-id="@Model.ContestId">Back to Contest</a>
</table>
